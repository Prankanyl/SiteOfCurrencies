@page
@{
    ViewData["Title"] = "Калькулятор";
}
<style>

    p {
        font-family: 'Times New Roman', Times, serif;
        text-align: justify;
        font-style: italic;
        font-size: 14pt;
    }
    .blockcenter {
        background-color: #191970;
        position: absolute;
        top: 30%;
        left: 35%;
        height: 40%;
        width: 30%;
        text-align: center;
    }
    label {
        color: #ffffff;
        font-family: 'Times New Roman', Times, serif;
        text-align: justify;
        font-style: italic;
        font-size: 20pt;
    }
    body {
        background-color: #676dc5;
    }
</style>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script type="text/javascript">
    window.onload = function () {
        let c = { 'USD': '2.38', 'EUR': '2.68', 'RUB': '3.42', 'BYN': '1'}; 

        let val = document.getElementById('val'); 
        let currency1 = document.getElementById('cur1');
        let currency2 = document.getElementById('cur2'); 
        let result = document.getElementsByClassName('convert_result')[0]; 
        function summ() { 
            let z = 0;
            if (currency1.value === currency2.value) { 
                result.innerText = 'Результат: ' + val.value;
            } else {
                if (currency1.value != 'PRANKANYL') { 
                    z = val.value * c[currency1.value]; 
                    result.innerHTML = 'Результат: ' + Math.ceil((z / c[currency2.value]) * 100) / 100; 
                } else { 
                    result.innerHTML = 'Результат: ' + Math.ceil((val.value * c[currency2.value]) * 100) / 100; 
                }
            }
        }
        val.oninput = function () { 
            summ();
        };
        currency1.onchange = function () { 
            summ();
        };
        currency2.onchange = function () { 
            summ();
        }
    }
</script>

<div class="container-fluid">
    <h1 style="padding-top: 1%; text-align: center; font-family: 'Times New Roman', Times, serif; color: #ffffff"><b>Калькулятор валют</b></h1>
    <div class="blockcenter">
        <form>
            <label>Введите сумму: </label>
            <input type="number" id="val" placeholder="Например: 10.9" />
            <br />
            <label>Выберите расчетную валюту: </label>
            <select id="cur1">
                <option>USD</option>
                <option>EUR</option>
                <option>RUB</option>
                <option>BYN</option>
            </select>
            <br />
            <label>Выберите расчетную валюту: </label>
            <select id="cur2">
                <option>USD</option>
                <option>EUR</option>
                <option>RUB</option>
                <option>BYN</option>
            </select>
        </form>
        <div class="convert_result" style="color: #ffffff; font-family: 'Times New Roman', Times, serif; text-align: justify; font-style: italic; font-size: 20pt; text-align: center">
            Результат:
        </div>
    </div>
</div>

